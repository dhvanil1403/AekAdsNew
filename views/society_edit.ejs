<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User</title>
    <!-- <link rel="stylesheet" href="/path/to/style.css"> -->

    <style>
        /* General page layout */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #F4F7FA;
            color: #333;
            margin: 0;
            padding: 0;
        }
        .container {
            width: 100%;
            margin: 20px;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        h1 {
            text-align: center;
            font-size: 2em;
            margin-bottom: 20px;
            color: #007BFF;
        }
        /* Form styling */
        form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }
        /* Styling for the "Assign Screens" section */
        .form-group {
            max-height: 450px;
            overflow-y: auto;
            padding-right: 10px;
            display: grid;
        }
        label {
            font-size: 1.1em;
            margin-bottom: 8px;
            color: #333;
        }
        input[type="text"],
        input[type="email"],
        input[type="password"],
        button {
            padding: 12px;
            font-size: 1em;
            border: 1px solid #ccc;
            border-radius: 5px;
            transition: all 0.3s ease;
        }
        input[type="text"]:focus,
        input[type="email"]:focus,
        input[type="password"]:focus,
        button:hover {
            border-color: #007BFF;
            outline: none;
        }
        input[type="checkbox"] {
            margin-right: 10px;
        }
        button {
            background-color: #007BFF;
            color: #fff;
            cursor: pointer;
            border: none;
            font-size: 1.1em;
            padding: 12px;
            border-radius: 5px;
        }
        button:hover {
            background-color: #0056B3;
        }
        .form-group div {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .form-group div input[type="checkbox"] {
            width: 20px;
            height: 20px;
        }
        .form-group div label {
            font-size: 1em;
            color: #333;
        }
        /* Optional: Style the scrollbar for better visibility */
        .form-group::-webkit-scrollbar {
            width: 8px;
        }
        .form-group::-webkit-scrollbar-thumb {
            background-color: #007BFF;
            border-radius: 10px;
        }
        .form-group::-webkit-scrollbar-track {
            background-color: #F1F1F1;
        }
        @media (max-height: 866px) {
            .form-group {
            max-height: 371px;
            overflow-y: auto;
            padding-right: 10px;
            display: grid;
        }
        }
        @media (max-height: 832px) {
            .form-group {
            max-height: 340px;
            overflow-y: auto;
            padding-right: 10px;
            display: grid;
        }
        }
        /* Responsive design */
        @media (max-width: 768px) {
            .container {
                width: 90%;
            }
            h1 {
                font-size: 1.5em;
            }
        }
    </style>
</head>

<body>

    <%- include('Dashboard') %>
    
    <div class="container">
        <h1>Edit User</h1>
        <form action="/society/edit/<%= user.userid %>" method="POST">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" value="<%= user.username %>" required />
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" value="<%= user.email %>" required />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control"
                    value="<%= user.password %>" />
            </div>

            <div class="form-group">
                <label for="screens">Assign Screens</label>
                <% screens.forEach(screen=> { %>
                    <div>
                        <input type="checkbox" id="screen_<%= screen.screenid %>" name="screenids"
                            value="<%= screen.screenid %>" <%=user.screenids.includes(screen.screenid.toString())
                            ? 'checked' : '' %>
                        />
                        <label for="screen_<%= screen.screenid %>">
                            <%= screen.screenid %>, <%= screen.screenname %>
                        </label>
                    </div>
                    <% }); %>
            </div>

            <button type="submit">Save Changes</button>
        </form>
    </div>

   

</body>

</html>