<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/font.css" />
    <link rel="stylesheet" href="/css/screen.css" />


    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f1faff;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .teams {
            width: 100%;
            /* height: 100%; */
            /* display: flex; */
            flex-direction: column;
            justify-content: center;
            gap: 2%;
            align-items: start;
            padding: 20px
                /* border: 1px solid black; */
        }

        .member {
            display: flex;
            justify-content: space-between;
            width: 30%;
            border: 1px solid transparent;
            border-radius: 10px;
            text-align: center;
            box-shadow: 0px 4px 10px 0px #00000040;
            background-color: #ffffff;
            padding: 12px;
            font-size: 18px;
            font-weight: 700;
            color: #1c1c1ccc;
            /* margin-top: 2%; */
            /* margin-left: 10%; */
        }

        .members,
        .New-members {
            width: 45%;
            height: 24px;
            font-size: 18px;
            font-weight: 700;
            line-height: 21.6px;
            color: #4D4D4D;
            cursor: pointer;
            transition: color 0.3s, border-bottom 0.3s;
        }

        .members:hover,
        .New-members:hover {
            border-bottom: 2px solid #0d6efd;
            color: #0d6efd;
        }

        .members.active,
        .New-members.active {
            border-bottom: 2px solid #0d6efd !important;
            color: #0d6efd !important;
            background-color: #fff !important;
        }




        a {
            text-decoration: none;
        }



        .table-container {
            width: 100%;
            max-height: 93%;
            border-radius: 15px;
            overflow-y: auto;
            margin-top: 10px;
            background-color: #fff;
            box-shadow: 0px 4px 10px 0px #00000040;

        }

        #userTable {
            width: 100%;
            /* border-collapse: collapse; */
        }

        .edit:hover {
            transform: scale(1.1);
        }

        th {
            padding: 12px 10px;
            background-color: #f2f2f2;
            font-size: 15px;
            color: #363636;
            font-weight: bold;
            text-align: center;
        }

        thead {
            position: sticky;
            top: 0;
        }


        .screens {
            width: 100%;
            height: 95vh;
            display: flex;
            flex-direction: column;
            justify-content: start;
            align-items: start;
            color: #1c1c1ccc;
            padding: 20px;
            z-index: 1;
            overflow: hidden;

        }
    </style>
</head>

<body>

    <%- include('Dashboard') %>

        <div class="screens">

            <div class="member">
                <div class="members active" id="members">
                    Users
                </div>
                <div class="New-members" id="newMembers">
                    New User
                </div>
            </div>

            <script>
                document.getElementById("members").addEventListener("click", function () {
                    window.location.href = "/society/users";
                });
                document.getElementById("newMembers").addEventListener("click", function () {
                    window.location.href = "/society/register";
                });

            </script>

            <div class="table-container">
                <table id="userTable">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>User ID</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Screens</th>
                            <th>Per Screen Rent</th>
                            <th>Total Rent</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach((user, index) => { %>
                            <tr>
                                <td>
                                    <%= index + 1 %> <!-- Display Serial Number -->
                                </td>
                                <td>
                                    <%= user.userid %>
                                </td>
                                <td>
                                    <%= user.username %>
                                </td>
                                <td>
                                    <%= user.email %>
                                </td>
                                <td>
                                    <!-- Display the count of screens -->
                                    <span>Total Screens Count: <%= user.screenids.length %></span>
                                    <br>
                                
                                </td>
                                <td>
                                    <%= user.per_screen_rent %>
                                </td>
                                <td>
                                    <%= user.total_rent %>
                                </td>
                                <td>
                                    <a href="/society/edit/<%= user.userid %>">
                                        <svg class="edit" width="30" height="30" viewBox="0 0 30 30" fill="none"
                                            xmlns="http://www.w3.org/2000/svg">
                                            <circle cx="15" cy="15" r="15" fill="#E8AF04" />
                                            <g clip-path="url(#clip0_4150_7630)">
                                                <path
                                                    d="M14.25 9H9C8.60218 9 8.22064 9.15804 7.93934 9.43934C7.65804 9.72064 7.5 10.1022 7.5 10.5V21C7.5 21.3978 7.65804 21.7794 7.93934 22.0607C8.22064 22.342 8.60218 22.5 9 22.5H19.5C19.8978 22.5 20.2794 22.342 20.5607 22.0607C20.842 21.7794 21 21.3978 21 21V15.75"
                                                    stroke="white" stroke-width="1.5" stroke-linecap="round"
                                                    stroke-linejoin="round" />
                                                <path
                                                    d="M19.875 7.87517C20.1734 7.5768 20.578 7.40918 21 7.40918C21.422 7.40918 21.8266 7.5768 22.125 7.87517C22.4234 8.17354 22.591 8.57821 22.591 9.00017C22.591 9.42213 22.4234 9.8268 22.125 10.1252L15 17.2502L12 18.0002L12.75 15.0002L19.875 7.87517Z"
                                                    stroke="white" stroke-width="1.5" stroke-linecap="round"
                                                    stroke-linejoin="round" />
                                            </g>
                                            <defs>
                                                <clipPath id="clip0_4150_7630">
                                                    <rect width="18" height="18" fill="white"
                                                        transform="translate(6 6)" />
                                                </clipPath>
                                            </defs>
                                        </svg>
                                    </a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>


</body>

</html>